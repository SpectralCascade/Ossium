{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Generate Makefile",
			"command": "./cbp2make.exe",
			"args": [
				"-in",
				"ossium.cbp",
				"-out",
				"makefile.mak"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Make All",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Static Lib",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"ossium"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Static Lib (Editor)",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"libossiumeditor"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Editor (Debug)",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"ossiumeditor__debug_"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Editor (Release)",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"ossiumeditor"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Clean Project",
			"command": "rm",
			"args": [
				"-r",
				"-Force",
				"obj"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}