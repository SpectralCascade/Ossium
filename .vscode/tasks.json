{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Generate Makefile",
			"command": "./cbp2make.exe",
			"args": [
				"-in",
				"ossium.cbp",
				"-out",
				"makefile.mak"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Generate Makefile (Box2D)",
			"command": "./cbp2make.exe",
			"args": [
				"-in",
				"Box2D/Box2D.cbp",
				"-out",
				"Box2D/makefile.mak"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Make Box2D",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"release",
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine/Box2D"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile (Box2D)"
		},
		{
			"type": "shell",
			"label": "Make All",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Static Lib",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"ossium",
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Static Lib (Editor)",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"libossiumeditor",
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Editor (Debug)",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"ossiumeditor__debug_",
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Make Editor (Release)",
			"command": "C:\\msys64\\mingw64\\bin\\mingw32-make.exe",
			"args": [
				"ossiumeditor"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": "Generate Makefile"
		},
		{
			"type": "shell",
			"label": "Clean Project",
			"command": "rm",
			"args": [
				"-r",
				"-Force",
				".objs"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Clean Box2D",
			"command": "rm",
			"args": [
				"-r",
				"-Force",
				"obj"
			],
			"options": {
				"cwd": "${workspaceFolder}/Engine/Box2D"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}